{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/configurations/*": ["configurations/*"],
      "@/constants/*": ["constants/*"],
      "@/controllers/*": ["controllers/*"],
      "@/errors/*": ["errors/*"],
      "@/interfaces/*": ["interfaces/*"],
      "@/middlewares/*": ["middlewares/*"],
      "@/models/*": ["models/*"],
      "@/routes/*": ["routes/*"],
      "@/services/*": ["services/*"],
      "@/shared/*": ["shared/*"],
      "@/utils/*": ["utils/*"],
      "@/validations/*": ["validations/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "files": ["./src/interfaces/index.d.ts"],
  "include": ["index.d.ts", "src/**/*.ts"],
}
